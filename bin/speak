#!/usr/bin/env python3
import os
import sys

if len(sys.argv) < 2:
    print("Usage: speak 'message'")
    sys.exit(1)

# Use the main TTS but add LISA prefix
message = "LISA: " + " ".join(sys.argv[1:])

# Path to the external speak script
external_speak = '/home/bc/bin/speak'

if os.path.exists(external_speak):
    # Call the main speak script
    os.system(f'{external_speak} "{message}"')
else:
    # Fallback to stdout
    print(f"[SPEAK] {message}")
